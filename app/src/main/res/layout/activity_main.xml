<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerInParent="true">


     <EditText
         android:id="@+id/email"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="@string/username_hint"
         android:background="@drawable/ash_border_background"
         android:padding="@dimen/global_8dp"
         android:layout_marginLeft="@dimen/global_32dp"
         android:layout_marginRight="@dimen/global_32dp"
         android:layout_marginBottom="@dimen/global_16dp"/>

      <EditText
          android:id="@+id/pass"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/password_hint"
          android:background="@drawable/ash_border_background"
          android:padding="@dimen/global_8dp"
          android:layout_marginLeft="@dimen/global_32dp"
          android:layout_marginRight="@dimen/global_32dp"/>

      <Button
          android:id="@+id/login_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/global_16dp"
          android:text="@string/login"
          android:padding="@dimen/global_16dp"
          android:textAllCaps="false"/>

   </LinearLayout>

</RelativeLayout>